<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dimen20"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardCornerRadius="@dimen/dimen16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_stroke_16_yellow"
        android:backgroundTint="@color/ride"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen22"
        android:paddingVertical="@dimen/dimen12">

        <TextView
            android:id="@+id/tvStatus"
            style="@style/poppins_bold_700_18sp_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivered" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/poppins_regular_400_12sp_dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16"
            tools:text="21 june, 2021" />

    </LinearLayout>

</androidx.cardview.widget.CardView>