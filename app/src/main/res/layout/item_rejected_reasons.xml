<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen4">

    <TextView
        android:id="@+id/tvReason"
        style="@style/poppins_medium_500_14sp_textBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_denied"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rbReason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbReason"
        style="@style/poppins_20sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvReason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvReason"
        app:layout_constraintTop_toTopOf="@+id/tvReason" />

</androidx.constraintlayout.widget.ConstraintLayout>