<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".fragments.ContactUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.SignInFragment">

        <TextView
            android:id="@+id/tvSignIn"
            style="@style/poppins_semibold_600_24sp_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16"
            android:text="@string/contact_us"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContact"
            style="@style/poppins_bold_700_18sp_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen28"
            android:layout_marginTop="@dimen/dimen44"
            android:text="@string/contact_information"
            android:textColor="@color/textBlack"
            app:layout_constraintTop_toBottomOf="@+id/tvSignIn" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/poppins_regular_400_14sp_dark_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:text="@string/say_something_to_start_a_live_chat"
            android:textColor="@color/textBlack"
            app:layout_constraintEnd_toEndOf="@+id/tvContact"
            app:layout_constraintStart_toStartOf="@+id/tvContact"
            app:layout_constraintTop_toBottomOf="@+id/tvContact" />

        <ImageView
            android:id="@+id/ivCall"
            style="@style/sans_14sp_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen28"
            android:src="@drawable/call"
            app:layout_constraintStart_toStartOf="@+id/tvDescription"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvCall"
            style="@style/poppins_regular_400_14sp_dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:text="@string/_1012_3456_789"
            android:textColor="@color/textBlack"
            app:layout_constraintStart_toStartOf="@+id/ivCall"
            app:layout_constraintTop_toBottomOf="@+id/ivCall" />

        <TextView
            android:id="@+id/btnCall"
            style="@style/inter_medium_12sp_white"
            android:layout_width="@dimen/dimen86"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/solid_primary_12"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen8"
            android:text="@string/call"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tvCall"
            app:layout_constraintEnd_toEndOf="@+id/tvDescription"
            app:layout_constraintTop_toTopOf="@+id/ivCall" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen24"
            android:background="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="@id/btnCall"
            app:layout_constraintStart_toStartOf="@+id/tvCall"
            app:layout_constraintTop_toBottomOf="@id/tvCall" />

        <ImageView
            android:id="@+id/ivEmail"
            style="@style/sans_14sp_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen28"
            android:src="@drawable/email"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/poppins_regular_400_14sp_dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:text="@string/email_us"
            android:textColor="@color/textBlack"
            app:layout_constraintStart_toStartOf="@+id/ivEmail"
            app:layout_constraintTop_toBottomOf="@+id/ivEmail" />

        <TextView
            android:id="@+id/btnEmail"
            style="@style/inter_medium_12sp_white"
            android:layout_width="@dimen/dimen86"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/solid_yellow_12"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen8"
            android:text="@string/email"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tvEmail"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/ivEmail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen64"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="@id/btnEmail"
            app:layout_constraintStart_toStartOf="@+id/tvEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail">

            <ImageView
                android:id="@+id/ivTwitter"
                style="@style/sans_14sp_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen12"
                android:src="@drawable/twitter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivInstagram"
                style="@style/sans_14sp_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen12"
                android:layout_marginEnd="@dimen/dimen12"
                android:src="@drawable/instagram"
                app:layout_constraintBottom_toBottomOf="@+id/ivTwitter"
                app:layout_constraintStart_toEndOf="@+id/ivTwitter"
                app:layout_constraintTop_toTopOf="@+id/ivTwitter" />

            <ImageView
                android:id="@+id/ivWhatsapp"
                style="@style/sans_14sp_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen12"
                android:layout_marginEnd="@dimen/dimen12"
                android:background="@drawable/circle"
                android:backgroundTint="#008000	"
                android:padding="3dp"
                android:src="@drawable/whatsapp"
                app:layout_constraintBottom_toBottomOf="@+id/ivInstagram"
                app:layout_constraintStart_toEndOf="@+id/ivInstagram"
                app:layout_constraintTop_toTopOf="@+id/ivTwitter" />


            <ImageView
                android:id="@+id/ivDiscord"
                style="@style/sans_14sp_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen12"
                android:src="@drawable/discord"
                app:layout_constraintBottom_toBottomOf="@+id/ivInstagram"
                app:layout_constraintStart_toEndOf="@+id/ivWhatsapp"
                app:layout_constraintTop_toTopOf="@+id/ivInstagram" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUrlLink"
            style="@style/poppins_medium_500_14sp_textBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen50"
            android:text="@string/https_zajil_express_com"
            android:textColor="@color/primary"
            app:layout_constraintEnd_toEndOf="@id/clSocial"
            app:layout_constraintStart_toStartOf="@+id/clSocial"
            app:layout_constraintTop_toBottomOf="@+id/clSocial" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>