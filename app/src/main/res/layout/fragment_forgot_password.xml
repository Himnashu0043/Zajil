<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:context=".fragments.ForgotPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.SignInFragment">

        <include
            android:id="@+id/includedToolbar"
            layout="@layout/toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen12"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includedToolbar" />

        <TextView
            android:id="@+id/tvForgotPassword"
            style="@style/poppins_semibold_600_24sp_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen50"
            android:text="@string/forgot_password"
            app:layout_constraintEnd_toEndOf="@+id/ivLogo"
            app:layout_constraintStart_toStartOf="@id/ivLogo"
            app:layout_constraintTop_toBottomOf="@id/ivLogo" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/poppins_regular_400_14sp_dark_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen48"
            android:layout_marginTop="@dimen/dimen16"
            android:gravity="center"
            android:text="@string/enter_your_mobile_number_to_get_otp_for_reset_your_password"
            app:layout_constraintEnd_toEndOf="@+id/tvForgotPassword"
            app:layout_constraintStart_toStartOf="@+id/tvForgotPassword"
            app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword" />


        <LinearLayout
            android:id="@+id/llPhoneCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen40"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription">

            <AutoCompleteTextView
                android:id="@+id/tvCountryCode"
                style="@style/poppins_medium_500_16sp_primary"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen44"
                android:layout_gravity="bottom"
                android:background="@drawable/stroke_light_grey_10"
                android:completionThreshold="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen12"
                android:text="+91"
                android:textColor="@color/textBlack" />

            <LinearLayout
                android:id="@+id/LlMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/poppins_medium_500_14sp_textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen20"
                    android:layout_marginBottom="-10dp"
                    android:background="@color/white"
                    android:elevation="0.1dp"
                    android:paddingHorizontal="@dimen/dimen8"
                    android:text="@string/mobile_number" />

                <EditText
                    android:id="@+id/etPhone"
                    style="@style/poppins_medium_500_14sp_textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen44"
                    android:layout_marginStart="@dimen/dimen12"
                    android:background="@drawable/edit_text_background"
                    android:digits="0987654321"
                    android:gravity="start|top"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/dimen10"
                    android:textColor="@color/primary"
                    android:textColorHint="@color/hint" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendOtp"
            style="@style/poppins_bold_700_14sp_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen24"
            android:background="@drawable/solid_primary_25"
            android:text="@string/send_otp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/llPhoneCountry"
            app:layout_constraintStart_toStartOf="@+id/llPhoneCountry"
            app:layout_constraintTop_toBottomOf="@+id/llPhoneCountry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>