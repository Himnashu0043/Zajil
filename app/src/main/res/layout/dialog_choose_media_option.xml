<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen20"
    android:background="@drawable/solid_white_22"
    android:elevation="@dimen/dimen14"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen40"
    android:paddingVertical="@dimen/dimen30">


    <TextView
        android:id="@+id/tvCongratulation"
        style="@style/poppins_medium_500_16sp_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Choose an option"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSuccess" />

    <TextView
        android:id="@+id/tvCamera"
        style="@style/poppins_regular_400_14sp_dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8"
        android:foreground="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/dimen12"
        android:text="Camera"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/tvCongratulation"
        app:layout_constraintStart_toStartOf="@+id/tvCongratulation"
        app:layout_constraintTop_toBottomOf="@id/tvCongratulation" />

    <TextView
        android:id="@+id/tvGallery"
        style="@style/poppins_regular_400_14sp_dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/dimen12"
        android:text="Gallery"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/tvCongratulation"
        app:layout_constraintStart_toStartOf="@+id/tvCongratulation"
        app:layout_constraintTop_toBottomOf="@id/tvCongratulation" />

    <TextView
        android:id="@+id/tvCancel"
        style="@style/poppins_regular_400_14sp_dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/dimen12"
        android:text="Cancel"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/tvCongratulation"
        app:layout_constraintStart_toStartOf="@+id/tvCongratulation"
        app:layout_constraintTop_toBottomOf="@id/tvCongratulation" />

</LinearLayout>