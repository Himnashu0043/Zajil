<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/credit" />

        <LinearLayout
            android:id="@+id/llStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen18"
            android:layout_toStartOf="@id/llEnd"
            android:layout_toEndOf="@id/ivAction"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTransactionDetail"
                    style="@style/poppins_bold_700_14sp_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/textBlack" />

                <TextView
                    android:id="@+id/tvWithdrawStatus"
                    style="@style/poppins_12sp_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/withdraw_status_selector"
                    android:paddingHorizontal="4dp"
                    android:text="Pending"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTransactionId"
                style="@style/poppins_medium_500_12sp_textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen4"
                android:layout_marginEnd="8dp"
                android:drawablePadding="@dimen/dimen8"
                android:text="@string/_65431346132"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/textLightBlack" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAmount"
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/sar_2000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/textBlack" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/poppins_regular_400_12sp_dark_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen4"
                android:text="@string/_15_02_2023_06_00_pm"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/textLightBlack" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1"
        android:layout_marginVertical="@dimen/dimen24"
        android:background="@color/transaction" />

</LinearLayout>