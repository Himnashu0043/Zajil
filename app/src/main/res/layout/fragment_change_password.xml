<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".fragments.ChangePasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dimen24"
        tools:context=".fragments.SignInFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen12"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSignIn"
            style="@style/poppins_semibold_600_24sp_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen50"
            android:text="@string/change_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/poppins_regular_400_14sp_dark_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen48"
            android:layout_marginTop="@dimen/dimen16"
            android:gravity="center"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur"
            app:layout_constraintTop_toBottomOf="@+id/tvSignIn" />


        <LinearLayout
            android:id="@+id/llOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen40"
            android:orientation="vertical"
            app:hintAnimationEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription">

            <TextView
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_marginBottom="-10dp"
                android:background="@color/white"
                android:elevation="0.1dp"
                android:paddingHorizontal="@dimen/dimen8"
                android:text="@string/old_password"
                android:textColor="@color/textBlack" />

            <EditText
                android:id="@+id/etOldPassword"
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen44"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_old_password"
                android:inputType="textPassword"
                android:padding="@dimen/dimen10"
                android:text=""
                android:textColor="@color/primary"
                android:textColorHint="@color/hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen20"
            android:orientation="vertical"
            app:hintAnimationEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llOldPassword">

            <TextView
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_marginBottom="-10dp"
                android:background="@color/white"
                android:elevation="0.1dp"
                android:paddingHorizontal="@dimen/dimen8"
                android:text="@string/new_password"
                android:textColor="@color/textBlack" />

            <EditText
                android:id="@+id/etNewPassword"
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen44"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_new_passwords"
                android:inputType="textPassword"
                android:padding="@dimen/dimen10"
                android:text=""
                android:textColor="@color/primary"
                android:textColorHint="@color/hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen20"
            android:orientation="vertical"
            app:hintAnimationEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llNewPassword">

            <TextView
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_marginBottom="-10dp"
                android:background="@color/white"
                android:elevation="0.1dp"
                android:paddingHorizontal="@dimen/dimen8"
                android:text="@string/confirm_password"
                android:textColor="@color/textBlack" />

            <EditText
                android:id="@+id/etConfirmPassword"
                style="@style/poppins_medium_500_14sp_textBlack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen44"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_confirm_password"
                android:inputType="textPassword"
                android:padding="@dimen/dimen10"
                android:text=""
                android:textColor="@color/primary"
                android:textColorHint="@color/hint" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangePassword"
            style="@style/poppins_bold_700_14sp_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginTop="@dimen/dimen40"
            android:layout_marginBottom="@dimen/dimen24"
            android:background="@drawable/solid_primary_25"
            android:text="@string/change_password"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llConfirmPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>