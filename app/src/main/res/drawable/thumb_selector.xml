<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/switchStrokeUnselected" />
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="2dp" android:color="@color/switchStrokeUnselected" />
        </shape> <!-- shape circle -->
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/switchStrokeSelected" />
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="2dp" android:color="@color/switchStrokeSelected" />
        </shape> <!-- shape circle -->
    </item>

</selector>